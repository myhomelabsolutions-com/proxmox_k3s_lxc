---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: argocd-server-ingress
  namespace: argocd
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/ssl-passthrough: "true"
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
spec:
  tls:
  - hosts:
    - {{ domain_name }}
    secretName: argocd-secret
  rules:
  - host: {{ domain_name }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: argocd-server
            port: 
              number: 8443

---
apiVersion: v1
kind: Secret
metadata:
  name: argocd-secret
  namespace: argocd
type: kubernetes.io/tls
data:
  tls.crt: {{ lookup('file', '/etc/letsencrypt/live/' + domain_name + '/fullchain.pem') | b64encode }}
  tls.key: {{ lookup('file', '/etc/letsencrypt/live/' + domain_name + '/privkey.pem') | b64encode }}